<%= content_for :javascripts do %>
  <%= javascript_include_tag "billing_addresses" %>
<% end %>
<%= simple_form_for [@project, @billing_address], url: project_billing_address_path(@project) do |f| %>
  <%= render(
    partial: "billing_addresses/billing_address",
    collection: @addresses,
    as: :billing_address,
    locals: { current_address_id: @billing_address.billing_address_id }
  ) %>

  <%= f.input :billing_address_id, as: :hidden, error: false %>
  <%= f.full_error :billing_address_id %>
  <%= f.button :submit, "Set Billing Address" %>
<% end %>
