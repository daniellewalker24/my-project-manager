<div class="content">
  <div class="main" id="job-specifications">
    <h3>Job Specifications</h3>

    <%= link_to "Add Job Specification", new_print_job_job_specification_path(@print_job), class: 'action-button' %>

    <% if @print_job.job_specifications.any? %>
      <%= render(
        partial: "job_specifications/job_specification",
        collection: @print_job.job_specifications,
        as: :job_specification
      ) %>
    <% end %>
  </div>
</div>
