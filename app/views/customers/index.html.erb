<div class="content">
  <div class="index">
    <h1>Customers</h1>

    <%= form_tag do %>
      <%= label_tag :name %>
      <%= text_field_tag :name %>

      <%= label_tag :only_quote, "Only include customers with existing quotes" %>
      <%= check_box_tag :only_quote %>

      <%= label_tag :only_sold, "Only include customers with existing sold" %>
      <%= check_box_tag :only_sold %>

      <%= label_tag :only_completed, "Only include customers with existing completed" %>
      <%= check_box_tag :only_completed %>

      <%= submit_tag %>
    <% end %>

    <%= render @customers %>
  </div>
</div>
