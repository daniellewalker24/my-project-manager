<%= div_for account_management, class: "basic-listing account-management #{cycle('odd', 'even', name: 'job_specification')}" do %>
  <%= pluralize account_management.hours, "hour" %>
  <%= link_to "Edit", edit_account_management_path(account_management) %>
  <%= button_to "Remove", account_management_path(account_management), method: :delete,
    data: { confirm: "Are you sure?", disable_with: "Processing..." }, class: 'secondary-action-button' %>
<% end %>
