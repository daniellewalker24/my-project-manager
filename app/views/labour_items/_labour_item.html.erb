<%= div_for labour_item, class: "basic-listing labour-item #{cycle('odd', 'even')}" do %>
  <%= labour_item.name %>
  <%= pluralize(labour_item.hours, "hour") %>
  <%= link_to "Edit", edit_labour_item_path(labour_item) %>
  <%= button_to "Remove", labour_item_path(labour_item), method: :delete,
    data: { confirm: "Are you sure?", disable_with: "Processing..." }, class: 'secondary-action-button' %>
<% end %>
