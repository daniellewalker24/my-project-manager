<%= div_for labour_item, class: "labour-item" do %>
  <%= labour_item.name %>
  <%= pluralize(labour_item.hours, "hour") %>
  <%= link_to "Edit", edit_labour_item_path(labour_item) %>
  <%= button_to "Remove", labour_item_path(labour_item), method: :delete,
    data: { confirm: "Are you sure?", disable_with: "Processing..." } %>
<% end %>
