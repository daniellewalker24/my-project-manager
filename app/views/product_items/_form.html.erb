<%= simple_form_for [@print_job, @product_item] do |f| %>
  <%= render 'shared/area_calculator', area_input: '#product_item_area' %>

  <%= f.input :area, disabled: (@product_item.print_job.quoted? ? false : true) %>
  <%= f.association :product, disabled: (@product_item.print_job.quoted? ? false : true) %>

  <%= f.input :actual_area %>
  <%= f.input :actual_cost %>

  <%= f.button :submit %>
<% end %>
