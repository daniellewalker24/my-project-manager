<%= link_to product_item.edit_link, class: "product-item", id: product_item.dom_id do %>
  <%= product_item.name %>
  <%= format_area(product_item.area) %>
  <%= link_to "Edit", edit_product_item_path(product_item) %>
  <%= button_to "Remove", product_item_path(product_item), method: :delete,
    data: { confirm: "Are you sure?", disable_with: "processing..." } %>
<% end %>
