<%= simple_form_for @project do |f| %>
  <%= f.input :name %>
  <%= f.input :description, as: :text %>
  <%= f.association :brand %>
  <%= f.association :customer, collection: Customer.order("name ASC") %>
  <%= f.association :quote_stage, prompt: 'Please select' if @project.status == 'quoted' || @project.new_record? %>
  <%= f.input :purchase_order %>
  <%= f.input :delivery_deadline %>
  <%= f.input :notes, as: :text, input_html: { class: 'notes-field' } %>
  <%= f.input :rush_job %>

  <%= f.button :submit %>
<% end %>
