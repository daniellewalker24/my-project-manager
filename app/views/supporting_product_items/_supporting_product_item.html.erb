<%= div_for supporting_product_item, class: "supporting-product-item" do %>
  <%= format_area(supporting_product_item.area) %>
  <%= supporting_product_item.name %>
  <%= link_to "Edit", edit_supporting_product_item_path(supporting_product_item) %>
