<div class="customer-payment content">
  <%= render(
    partial: "customer/brands/header",
    locals: {
      invoice: @invoice
    }
  ) %>

  <div class="invoice-header-wrap">
    <div class="invoice-header">
      <h1>Online Payment</h1>
    </div>
  </div>

  <div class="invoice-summary">
    <div class="invoice-details">
      <ul class="invoice-breakdown">
        <li>Invoice: <%= @invoice.number %></li>
        <li>Amount: <%= number_to_currency @invoice.amount %></li>
      </ul>
    </div>

    <div class="pay-invoice-form">
      <%= form_tag customer_invoice_payment_path(@invoice), id: "payment-form" do %>
        <span class="payment-errors"></span>

        <div class="form-row">
          <label>
            <span>Card Number</span>
            <input id="card_number" type="text" size="20" data-stripe="number"/>
          </label>
        </div>

        <div class="form-row">
          <label>
            <span>CVC / <strong>CVV number</strong></span>
            <input id="cc_cvc" type="text" size="4" data-stripe="cvc"/>
          </label>
        </div>

        <div class="form-row">
          <label>
            <span>Expiration (MM/YYYY)</span>
            <input id="exp_month" type="text" size="2" data-stripe="exp-month"/>
            /
            <input id="exp_year" type="text" size="4" data-stripe="exp-year"/>
          </label>

        </div>

        <div class="form-row">
          <label>
            <span>Email Address (<strong>payment receipt will be sent to this address</strong>)</span>
            <input id="email" name="email" type="email" size="20" />
          </label>
        </div>

        <button type="submit" class="action-button">Submit Payment</button>
      <% end %>
    </div>
  </div>


</div>
