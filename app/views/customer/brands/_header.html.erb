<%= content_for :header do %>
  <div class="customer-header-inner">
    <div class="brand-logo">
      <%= image_tag invoice.logo, class: "logo" %>
    </div>

    <ul class="brand-contact-details">
      <li>
        <div class="brand-contact-type">A:</div>

        <strong class="accent">
          <%= invoice.business_address_single_line %>
        </strong>
      </li>
      <li>
        <div class="brand-contact-type">T:</div>
        <strong class="accent"><%= invoice.telephone %></strong>
      </li>
      <li>
        <div class="brand-contact-type">E:</div>
        <strong class="accent"><%= invoice.email %></strong>
      </li>
      <li>
        <div class="brand-contact-type">W:</div>
        <strong class="accent"><%= invoice.website %></strong>
      </li>
    </ul>
  </div>
<% end %>
